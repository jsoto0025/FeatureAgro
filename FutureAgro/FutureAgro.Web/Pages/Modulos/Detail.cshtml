@page
@model FutureAgro.Web.Pages.Modulos.DetailModel
@{
    ViewData["Title"] = "Detail";
}

<div class="container-fluid">
    <h1>Módulo 1 - Lechugas</h1>
    <div class="row">
        <div class="col-8 pl-0">
            <div class="card mt-1">
                <div class="card-header panel-title">
                    @*<a data-toggle="collapse" href="#collapsePlantas" role="button" aria-expanded="true" aria-controls="collapsePlantas">*@
                        3 Plantas
                    @*</a>*@
                </div>
                <div class="card-body collapse show" id="collapsePlantas">
                    <div class="media m-1 mt-2">
                        <img src="~/Imagenes/Lechuga.png" height="100" class="mr-3" alt="Lechugas">
                        <div class="media-body">
                            <h5 class="media-title">Lechuga 1</h5>
                            <p>Fecha plantación: 2019-08-01</p>
                            Crecimiento
                            <div class="progress mb-3">
                                <div class="progress-bar" role="progressbar" style="width:70%;" aria-valuenow="70" aria-valuemin="0" aria-valuemax="100"></div>
                            </div>
                            <h6 class="mb-3">
                                Tiempo de producción
                                <span class="badge badge-warning">2 Semanas</span>
                            </h6>
                        </div>
                    </div>
                    <hr />
                    <div class="media m-1 mt-2">
                        <img src="~/Imagenes/Lechuga.png" height="100" class="mr-3" alt="Lechugas">
                        <div class="media-body">
                            <h5 class="media-title">Lechuga 2</h5>
                            <p>Fecha plantación: 2019-08-01</p>
                            Crecimiento
                            <div class="progress mb-3">
                                <div class="progress-bar" role="progressbar" style="width:40%;" aria-valuenow="40" aria-valuemin="0" aria-valuemax="100"></div>
                            </div>
                            <h6 class="mb-3">
                                Tiempo de producción
                                <span class="badge badge-danger">5 Semanas</span>
                            </h6>
                        </div>
                    </div>
                    <hr />
                    <div class="media m-1 mt-2">
                        <img src="~/Imagenes/Lechuga.png" height="100" class="mr-3" alt="Lechugas">
                        <div class="media-body">
                            <h5 class="media-title">Lechuga 3</h5>
                            <p>Fecha plantación: 2019-08-01</p>
                            Crecimiento
                            <div class="progress mb-3">
                                <div class="progress-bar" role="progressbar" style="width:60%;" aria-valuenow="40" aria-valuemin="0" aria-valuemax="100"></div>
                            </div>
                            <h6 class="mb-3">
                                Tiempo de producción
                                <span class="badge badge-warning">3 Semanas</span>
                            </h6>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-4">
            <h3 class="mb-4">Control de ambiente</h3>
            <div class="row">
                <h5 class="col-6"><i class="fas fa-thermometer-half"></i> Temperatura</h5>
                <h6 class="col-6 text-right align-text-bottom">Calefacción <a href="#"><i class="fas fa-toggle-off text-success"></i></a></h6>
            </div>
            <table class="table">
                <thead>
                    <tr>
                        <td>Actual</td>
                        <td>Promedio</td>
                        <td>Ideal</td>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td><div class="badge badge-danger">25°C</div></td>
                        <td><div class="badge badge-success">20°C</div></td>
                        <td><div class="badge badge-info">19.5°C</div></td>
                    </tr>
                </tbody>
            </table>
            <hr />
            <div class="row">
                <h5 class="col-6"><i class="fas fa-tint"></i> Humedad</h5>
                <h6 class="col-6 text-right align-text-bottom">Aspersores <a href="#"><i class="fas fa-toggle-on text-danger"></i></a></h6>
            </div>
            <table class="table">
                <thead>
                    <tr>
                        <td>Actual</td>
                        <td>Promedio</td>
                        <td>Ideal</td>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td><div class="badge badge-success">70%</div></td>
                        <td><div class="badge badge-success">69%</div></td>
                        <td><div class="badge badge-info">70%</div></td>
                    </tr>
                </tbody>
            </table>
            <hr />
            <div class="row">
                <h5 class="col-6"><i class="fas fa-lightbulb"></i> Luminosidad</h5>
                <h6 class="col-6 text-right align-text-bottom">Luces <a href="#"><i class="fas fa-toggle-off text-success"></i></a></h6>
            </div>
            <table class="table">
                <thead>
                    <tr>
                        <td>Actual</td>
                        <td>Promedio</td>
                        <td>Ideal</td>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td><div class="badge badge-success">500 Lumens</div></td>
                        <td><div class="badge badge-warning">450 Lumens</div></td>
                        <td><div class="badge badge-info">490 Lumens</div></td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>