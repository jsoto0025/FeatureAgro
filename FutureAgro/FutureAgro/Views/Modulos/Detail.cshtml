@{
    ViewData["Title"] = "Detail";
}

<div class="container-fluid">
    <h1>Módulo 1 - Lechugas</h1>
    <div class="row">
        <div class="col-7">
            <div class="card mt-1 border-0">
                <h5>
                    @*<a data-toggle="collapse" href="#collapsePlantas" role="button" aria-expanded="true" aria-controls="collapsePlantas">*@
                    3 Plantas
                    @*</a>*@
                </h5>
                <div class="card-body collapse show" id="collapsePlantas">
                    <div class="media m-1 mt-2">
                        <img src="~/Images/Lechuga.png" height="100" class="mr-3" alt="Lechugas">
                        <div class="media-body">
                            <h5 class="media-title">Lechuga 1</h5>
                            <p>Fecha plantación: 2019-08-01</p>
                            Crecimiento
                            <div class="progress mb-3">
                                <div class="progress-bar" role="progressbar" style="width:70%;" aria-valuenow="70" aria-valuemin="0" aria-valuemax="100"></div>
                            </div>
                            <h6 class="mb-3">
                                Tiempo de producción
                                <span class="badge badge-warning">2 Semanas</span>
                            </h6>
                        </div>
                    </div>
                    <hr />
                    <div class="media m-1 mt-2">
                        <img src="~/Images/Lechuga.png" height="100" class="mr-3" alt="Lechugas">
                        <div class="media-body">
                            <h5 class="media-title">Lechuga 2</h5>
                            <p>Fecha plantación: 2019-08-01</p>
                            Crecimiento
                            <div class="progress mb-3">
                                <div class="progress-bar" role="progressbar" style="width:40%;" aria-valuenow="40" aria-valuemin="0" aria-valuemax="100"></div>
                            </div>
                            <h6 class="mb-3">
                                Tiempo de producción
                                <span class="badge badge-danger">5 Semanas</span>
                            </h6>
                        </div>
                    </div>
                    <hr />
                    <div class="media m-1 mt-2">
                        <img src="~/Images/Lechuga.png" height="100" class="mr-3" alt="Lechugas">
                        <div class="media-body">
                            <h5 class="media-title">Lechuga 3</h5>
                            <p>Fecha plantación: 2019-08-01</p>
                            Crecimiento
                            <div class="progress mb-3">
                                <div class="progress-bar" role="progressbar" style="width:60%;" aria-valuenow="40" aria-valuemin="0" aria-valuemax="100"></div>
                            </div>
                            <h6 class="mb-3">
                                Tiempo de producción
                                <span class="badge badge-warning">3 Semanas</span>
                            </h6>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="offset-1 col-4">
            <h5 class="mb-4">Control de ambiente</h5>
            <div class="row">
                <h6 class="col-6"><i class="fas fa-thermometer-half"></i> Temperatura</h6>
                <h6 class="col-6 text-right align-text-bottom small">
                    <span class="mdl-switch__label" style="left:0;">Calefacción</span>
                    <label class="mdl-switch mdl-js-switch mdl-js-ripple-effect w-25" for="switch-Calefaccion">
                        <input type="checkbox" id="switch-Calefaccion" class="mdl-switch__input">
                    </label>
                </h6>
            </div>
            <table class="table small">
                <thead>
                    <tr>
                        <td>Actual</td>
                        <td>Promedio</td>
                        <td>Ideal</td>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td><div class="badge badge-danger">25°C</div></td>
                        <td><div class="badge badge-success">20°C</div></td>
                        <td><div class="badge badge-info">19.5°C</div></td>
                    </tr>
                </tbody>
            </table>
            <hr />
            <div class="row">
                <h6 class="col-6"><i class="fas fa-tint"></i> Humedad</h6>
                <h6 class="col-6 text-right align-text-bottom small">
                    <span class="mdl-switch__label" style="left:0;">Aspersores</span>
                    <label class="mdl-switch mdl-js-switch mdl-js-ripple-effect w-25" for="switch-Aspersores">
                        <input type="checkbox" id="switch-Aspersores" class="mdl-switch__input" checked />
                    </label>
                </h6>
            </div>
            <table class="table small">
                <thead>
                    <tr>
                        <td>Actual</td>
                        <td>Promedio</td>
                        <td>Ideal</td>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td><div class="badge badge-success">70%</div></td>
                        <td><div class="badge badge-success">69%</div></td>
                        <td><div class="badge badge-info">70%</div></td>
                    </tr>
                </tbody>
            </table>
            <hr />
            <div class="row">
                <h6 class="col-6"><i class="fas fa-lightbulb"></i> Luminosidad</h6>
                <h6 class="col-6 text-right align-text-bottom small">
                    <span class="mdl-switch__label" style="left:0;">Luces</span>
                    <label class="mdl-switch mdl-js-switch mdl-js-ripple-effect w-25" for="switch-Luces">
                        <input type="checkbox" id="switch-Luces" class="mdl-switch__input">
                    </label>
                </h6>
            </div>
            <table class="table small">
                <thead>
                    <tr>
                        <td>Actual</td>
                        <td>Promedio</td>
                        <td>Ideal</td>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td><div class="badge badge-success">500 Lumens</div></td>
                        <td><div class="badge badge-warning">450 Lumens</div></td>
                        <td><div class="badge badge-info">490 Lumens</div></td>
                    </tr>
                </tbody>
            </table>
            <hr />
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-page="/Ambiente/Detail">Ver detalle</a>
                </li>
            </ul>
        </div>
    </div>
</div>