@model ExternalLoginModel
@{
    ViewData["Title"] = "Confirmar";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<h1>@ViewData["Title"]</h1>
<h4>Asociar tu cuenta de @Model.LoginProvider.</h4>
<hr />

<p class="text-info">
    Te has autenticado exitosamente con <strong>@Model.LoginProvider</strong>.
    Por favor, presiona el boton "Registrarme" para finalizar e iniciar sesión.
</p>

<div class="row">
    <div class="col-md-4">
        <form action="/Account/Confirmation?returnUrl=@Model.ReturnUrl" method="post">
            @Html.ValidationSummary()
            <div class="form-group">
                @Html.LabelFor(r => r.Email)
                @Html.TextBoxFor(r => r.Email, new { @class = "form-control", @disabled = "disabled" })
                @Html.HiddenFor(r => r.Email)
                @Html.ValidationMessageFor(r => r.Email)
            </div>
            <button type="submit" class="btn btn-primary">Registrarme</button>
        </form>
    </div>
</div>
